<li>
    <article class="snippet">
        <img src="{{ post.data.image }}" alt="{{post.data.imageAlt}}"/>
        <h3 class="spinnet_title">
            <a href="{{post.url}}">{{post.data.title}}</a>
        </h3>
        <p class="snippet_meta">by
            <span>{{post.data.author}} on {{post.data.date | postDate}}</span>
        </p>
        <p class="snippet__body">{{post.data.description}}</p>
        <a href="{{post.url}}" class="btn btn--primary">
            Continue Reaing</a>
    </article>
</li>